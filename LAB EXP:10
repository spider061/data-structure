#include <stdio.h>
 #include <stdlib.h>
 
 struct stack
 {
     int data;
     struct stack *next;
 };
 struct stack *top = NULL;
 void push(int ele)
 {
     struct stack *temp = (struct stack *)malloc(sizeof(struct stack));
     if (temp == NULL)
     {
         printf("Stack overflow !!! \n");
     }
     else
     {
         temp->data = ele;
         temp->next = top;
         top = temp;
         printf("Push %d into the stack\n", ele);
     }
 }
 int pop()
 {
     if (top == NULL)
     {
         printf("Stack underflow !!!\n");
         return -1;
     }
     else
     {
         int val = top->data;
         struct stack *temp = top;
         top = top->next;
         free(temp);
         return val;
     }
 }
 int peek()
 {
     if (top == NULL)
     {
         printf("Stack is empty !!!\n");
         return -1;
     }
     else
     {
         return top->data;
     }
 }
 void show()
 {
     if (top == NULL)
     {
         printf("Stack is empty !!!\n");
     }
     else
     {
         printf("Stack elements are : \n");
         struct stack *temp = top;
         while (temp != NULL)
         {
             printf("%d ", temp->data);
             temp = temp->next;
         }
         printf("\n\n");
     }
 }
 
 int main()
 {
     while (1)
     {
         printf("1.Push\n2.Pop\n3.Peek\n4.Show\n5.Exit\n");
         int choice, val, res;
         printf("Enter choice : ");
         scanf("%d", &choice);
         switch (choice)
         {
         case 1:
             printf("Enter value : ");
             scanf("%d", &val);
             push(val);
             break;
         case 2:
             val = pop();
             if (val != -1)
             {
                 printf("%d pop from the stack\n", val);
             }
             break;
         case 3:
             val = peek();
             if (val != -1)
             {
                 printf("Top element in the stack = %d\n", val);
             }
             break;
         case 4:
             show();
             break;
         case 5:
             exit(0);
         default:
             printf("Invalid Choice !!!\n");
         }
     }
     printf("\n");
 }
